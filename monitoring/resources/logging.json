{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "[%(asctime)s] [%(process)d-%(parentThread)s-%(thread)s] %(pathname)s [line:%(lineno)d] %(levelname)s: %(message)s"
    },
    "colored": {
      "()": "colorlog.ColoredFormatter",
      "format": "%(log_color)s[%(asctime)s] [%(process)d-%(parentThread)s-%(thread)s] %(pathname)s [line:%(lineno)d] %(levelname)s: %(message)s",
      "log_colors": {
        "DEBUG": "cyan",
        "INFO": "green",
        "WARNING": "yellow",
        "ERROR": "red",
        "CRITICAL": "red,bg_white"
      },
      "secondary_log_colors": {
        "message": {
          "ERROR": "red,bold",
          "CRITICAL": "red,bg_white,bold"
        }
      },
      "style": "%"
    },
    "json": {
      "()": "monitoring.logger.JSONFormatter",
      "fmt_keys": {
        "level": "levelname",
        "message": "message",
        "timestamp": "timestamp",
        "logger": "name",
        "module": "module",
        "function": "funcName",
        "line": "lineno",
        "parent_thread": "parentThread",
        "thread": "thread",
        "thread_name": "threadName"
      }
    }
  },
  "filters": {
    "parent_thread": {
      "()": "monitoring.logger.ParentThreadFilter"
    }
  },
  "handlers": {
    "file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filters": [
        "parent_thread"
      ],
      "filepath": "/var/log/scheduler",
      "filename": "scheduler.log",
      "maxBytes": 1048576000,
      "backupCount": 5
    },
    "clean_core_dump_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filters": [
        "parent_thread"
      ],
      "filepath": "/var/log/systemd/coredump/",
      "filename": "clean_core_dump.log",
      "maxBytes": 1048576000,
      "backupCount": 5
    },
    "console_handler": {
      "class": "logging.StreamHandler",
      "level": "DEBUG",
      "formatter": "colored",
      "filters": [
        "parent_thread"
      ],
      "stream": "ext://sys.stdout"
    }
  },
  "root": {
    "level": "DEBUG",
    "handlers": [
      "file_handler",
      "console_handler"
    ]
  },
  "loggers": {
    "core_dump": {
      "level": "INFO",
      "handlers": [
        "console_handler",
        "clean_core_dump_file_handler"
      ]
    }
  }
}